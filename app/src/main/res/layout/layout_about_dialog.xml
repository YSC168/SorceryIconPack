<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout_about_dialog_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout_dialog_icon_show_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingRight="32dp">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/textView_about_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="Sorcery"
            android:textAllCaps="true"
            android:textColor="@color/title"
            android:textSize="28dp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/textView_about_dialog_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="@color/content"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView_about_dialog_credits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="6dp"
            android:textColorLink="?attr/colorAccent"
            android:textStyle="italic"/>
    </LinearLayout>

</RelativeLayout>
