<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/linearLayout_item_search_card_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            tools:src="@drawable/a500px"
            android:id="@+id/imageView_item_search_card_icon"
            android:layout_width="@dimen/icon_search_item_size"
            android:layout_height="@dimen/icon_search_item_size"
            android:layout_margin="@dimen/icon_grid_item_margin"
            android:transitionName="icon"/>

        <TextView
            android:layout_marginLeft="8dp"
            tools:text="500px"
            android:id="@+id/textView_item_search_card_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            android:textSize="20sp"/>

    </LinearLayout>
</FrameLayout>