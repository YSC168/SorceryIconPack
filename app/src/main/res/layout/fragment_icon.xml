<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa">

    <com.sorcerer.sorcery.iconpack.ui.views.IconRecyclerView
        android:id="@+id/recyclerView_icon_gird"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:cacheColorHint="#00000000"
        android:fadeScrollbars="false"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:overScrollMode="never"
        android:scrollbars="none"/>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linearLayout_icon_list_empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_icon_list_empty_view_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:alpha="0.2"
            android:gravity="center"
            android:text="&#xe616;"
            android:textColor="@color/black"
            android:textSize="200dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:alpha="0.2"
            android:gravity="center"
            android:text="oops...nothing"
            android:textColor="@color/black"
            android:textSize="28dp"/>

    </LinearLayout>
</RelativeLayout>
